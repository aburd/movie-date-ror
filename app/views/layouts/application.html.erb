<!DOCTYPE html>
<html>
<head>
  <title>MovieDate</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag    'bootstrap.min', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<nav class="navbar navbar-default navbar-fixed-top">
	  <div class="container-fluid">
		<div class="row">
			<div class="col-md-8 text-left">
				<h1 class="top-logo" >Movie Date</h1> 
				<ul class="nav navbar-nav">
			    	<li><a href="">About</a></li>
			    	<li><a href="">People</a></li>
			    	<li><a href="">Blog</a></li>
			    </ul>
			</div>

			<div class="col-md-4 text-right">
				<button type="button" class="btn btn-default navbar-btn btn-success">Sign Up</button>
			    <button type="button" class="btn btn-default navbar-btn btn-danger">Log In</button>
			</div>
		</div>

	  </div>
	</nav>
	
	<%= yield %>
	
<% javascript_include_tag "bootstrap.min" %>
</body>
</html>
